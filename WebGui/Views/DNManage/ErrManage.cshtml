                   var UFid = getGridVal($("#containerInfoGrid"), selRowId, "UFid", null);
                   var SeqNo = getGridVal($("#containerInfoGrid"), selRowId, "SeqNo", null);
                   var JobNo = getGridVal($("#containerInfoGrid"), selRowId, "JobNo", null);
